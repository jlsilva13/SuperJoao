<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tituloAdicionarBebida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Bebida"
        android:textSize="24sp"
        android:textColor="#2196F3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/nomeBebida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da Bebida"
        android:layout_below="@id/tituloAdicionarBebida"
        android:layout_marginTop="30dp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/quantidadeBebida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantidade"
        android:layout_below="@id/nomeBebida"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/precoBebida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PreÃ§o"
        android:layout_below="@id/quantidadeBebida"
        android:layout_marginTop="20dp"
        android:inputType="numberDecimal"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnSalvarBebida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Bebida"
        android:layout_below="@id/precoBebida"
        android:layout_marginTop="30dp"
        android:background="#4CAF50"
        android:textColor="#FFFFFF" />
</RelativeLayout>
